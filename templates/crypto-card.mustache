<div class="bg-gray-800 p-4 rounded-lg shadow-lg flex flex-col gap-3">
  <!-- Coin info -->
  <div class="flex items-center gap-3">
    <img src="https://static.coincap.io/assets/icons/{{symbolLower}}@2x.png" 
         alt="{{symbol}}" 
         class="w-10 h-10 rounded-full object-cover">
    <div>
      <div class="text-lg font-semibold">{{name}}</div>
      <div class="text-md text-gray-400">{{symbol}}</div>
    </div>
  </div>

  <!-- Price USD -->
  <div class="flex items-center gap-2">
    <p class="text-lg font-semibold">Price USD:</p>
    <p class="text-md text-gray-400">${{price}}</p>
  </div>
  
  <!-- Price EURO -->
  <div class="flex items-center gap-2">
    <p class="text-lg font-semibold">Price Euro:</p>
    <p class="text-md text-gray-400">${{priceEur}}</p>
  </div>

  <!-- Market Cap -->
  <div class="flex items-center gap-2">
    <p class="text-lg font-semibold">Market Cap:</p>
    <p class="text-md text-gray-400">${{marketCap}}</p>
  </div>

  <!-- 24h Change -->
  <div class="flex items-center gap-2">
    <p class="text-lg font-semibold">24h Change:</p>
    <p class="text-md text-gray-400"><span class="{{color}}">{{change}}%</span></p>
  </div>

  <!-- Buttons -->
  <div class="mt-3 flex flex-col gap-2">
    <!-- Info button -->
    <button 
      class="show-info-btn bg-blue-600 hover:bg-blue-700 px-6 py-2 rounded-md text-white font-semibold"
      data-id="{{id}}" 
      data-name="{{name}}" 
      data-symbol="{{symbol}}" 
      data-price="{{price}}" 
      data-marketcap="{{marketCap}}" 
      data-change="{{change}}">
      Info
    </button>

    <!-- Buy button (with login check) -->
    {{#canBuy}}
      <button 
        class="show-buy-btn bg-green-600 hover:bg-green-700 px-6 py-2 rounded-md text-white font-semibold"
        data-name="{{name}}"
        data-symbol="{{symbol}}"
        data-price="{{price}}">
        Buy
      </button>
    {{/canBuy}}
    {{^canBuy}}
      <div class="relative group">
        <button 
          class="w-full bg-gray-600 text-gray-400 px-6 py-2 rounded-md font-semibold cursor-not-allowed"
          disabled>
          Buy
        </button>
        <!-- Tooltip -->
        <div class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 hidden group-hover:block 
                    bg-black text-white text-xs rounded-md px-2 py-1 whitespace-nowrap shadow-lg">
          You need to login to buy crypto
        </div>
      </div>
    {{/canBuy}}
  </div>
</div>
