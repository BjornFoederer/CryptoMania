<tr class="border-b border-gray-700 hover:bg-gray-700">
    <td class="py-3 px-6">{{rank}}</td>
    <td class="py-3 px-6 flex items-center gap-3">
      <div>
        <div class="font-semibold">{{name}}</div>
        <div class="text-gray-400 text-sm">{{symbol}}</div>
      </div>
    </td>
    <td class="py-3 px-6">${{price}}</td>
    <td class="py-3 px-6">{{amount}}</td>
    <td class="py-3 px-6">${{totalValue}}</td>
    <td class="py-3 px-6">
        <form method="post" action="database/sell_coins.php" onsubmit="return confirm('Weet je zeker dat je deze coin wilt verkopen?');">
          <input type="hidden" name="cryptoID" value="{{cryptoID}}">
          <button type="submit" class="bg-red-500 px-4 py-2 rounded text-white">Sell</button>
        </form>
    </td>
</tr>
