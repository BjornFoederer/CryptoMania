<div class="news-article bg-gray-800 p-4 rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300 flex flex-col md:flex-row gap-4">
  {{#image}}
    <div class="md:w-1/3 flex-shrink-0">
      <img src="{{image}}" alt="{{title}}" class="rounded-lg w-full h-auto object-cover"/>
    </div>
  {{/image}}
  <div class="flex-1 flex flex-col justify-between">
    <div>
      <h2 class="text-xl md:text-2xl font-semibold text-blue-400 mb-2">{{title}}</h2>
      <p class="text-gray-300 mb-2 line-clamp-4">{{description}}</p>
    </div>
    <div class="mt-2 flex justify-between items-center text-gray-400 text-sm">
      <span>{{source}} - {{publishedAt}}</span>
      {{#hasUrl}}
        <a href="{{url}}" target="_blank" class="text-blue-500 hover:text-blue-400 underline">Lees meer</a>
      {{/hasUrl}}
    </div>
  </div>
</div>
