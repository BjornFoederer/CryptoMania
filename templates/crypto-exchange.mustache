<div class="bg-gray-900 text-white rounded-2xl p-6 shadow-md hover:shadow-lg transition mb-4 flex flex-col md:flex-row items-start justify-between">
  <div>
    <p class="text-sm text-gray-400">Rank #{{rank}}</p>
    <h2 class="text-xl font-semibold">{{name}}</h2>
    <p class="text-gray-300 mt-1">Volume (24h): <span class="font-medium">{{volumeUsd}} USD</span></p>
  </div>
  {{#hasUrl}}
  <a href="{{url}}" target="_blank"
     class="mt-3 md:mt-0 px-4 py-2 bg-sky-600 rounded-lg text-white font-medium hover:bg-sky-500 transition">
    Bezoek site
  </a>
  {{/hasUrl}}
</div>
