<div class="bg-gray-800 rounded-lg shadow-lg w-[500px] p-8 relative transform scale-95 opacity-0 transition-all duration-300">
  <button id="close-buy-modal" class="absolute top-1 right-2 text-gray-400 hover:text-white text-3xl">&times;</button>
  <h2 class="text-3xl font-bold mb-4" id="coin-name">Koop {{name}}</h2>
  <p class="text-lg" id="coin-price"><strong>Prijs:</strong> ${{price}}</p>

  <label for="buy-amount" class="block text-lg mb-2" id="coin-amount">Aantal {{symbol}} kopen:</label>
  <input type="number" id="buy-amount" min="0" placeholder="0" class="w-full p-2 rounded-md text-gray-900"/>
  <div id="coin-total" class="mt-2 text-white font-semibold"></div>
  
  <button id="buy-coin" class="mt-4 w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-md">
    Koop
  </button>
</div>
